{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "finding_id": { "type": "string" },
    "type": { "type": "string", "enum": ["http_request", "http_response", "dom_snapshot", "screenshot", "har"] },
    "content": { "type": "string" },
    "metadata": {
      "type": "object",
      "properties": {
        "timestamp": { "type": "string", "format": "date-time" },
        "url": { "type": "string", "format": "uri" },
        "method": { "type": "string" }
      },
      "required": ["timestamp", "url", "method"]
    }
  },
  "required": ["id", "finding_id", "type", "content", "metadata"]
}
